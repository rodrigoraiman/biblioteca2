<%= form_with(model: biblioteca, local: true) do |form|%>
    <% if biblioteca.errors.any? %>
        <div id="error_explanation">
            <h2><%= pluralize(biblioteca.errors.count, "error") %> prohibited </h2>

            <ul>
            <%bilbioteca.errors.full_messages.each do |message| %>
                <li><%= message %></li>
            <%end%>
            </ul>
        </div>
    <%end%>
       
  <div class="field">
    <%= form.label :title %>
    <%= form.text_field :title %>
  </div>

  <div class="field">
    <%= form.label :author %>
    <%= form.text_field :author %>
  </div>

  <div class="field">
    <%= form.label :status %>
    <%= form.select :status, Biblioteca.statuses.keys %>
  </div>

  <div class="field">
    <%= form.label :date_borrowed %>
    <%= form.date_field :date_borrowed %>
  </div>

  <div class="field">
    <%= form.label :date_returned %>
    <%= form.date_field :date_returned %>
  </div>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>